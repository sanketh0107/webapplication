pipeline {
  
    agent any
    
    tools{
        maven "maven"
    }

    stages {
        stage('Clone') {
            steps {
               git https://github.com/sanketh0107/webapplication.git
            }
        }
        stage('Build') {
            steps {
               sh 'mvn clean package'
            }
        }
        
        stage('Create Image'){
            steps{
               steps {
                	script {
                		sh 'ansible-playbook task.yml'
                	}
                }
            }
        }
    }
}
